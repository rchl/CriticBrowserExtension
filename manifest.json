{
  "author": "Rafal Chlodnicki",
  "manifest_version": 2,
  "name": "Critic",
  "version": "1.0",
  "background": {
    "scripts": ["constants.js", "background.js"],
    "persistent": true
  },
  "icons": {
    "19": "images/19.png",
    "38": "images/38.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "images/19.png",
      "38": "images/38.png"
    }
   },
   "content_scripts": [
      {
        "matches": ["https://*/tutorial?item=extensions-api*"],
        "js": ["injected/linkify.js"],
        "run_at": "document_end"
      }
    ],
   "permissions": [
     "https://critic.oslo.osa/*",
     "https://critic-dev.oslo.osa/*",
     "notifications",
     "storage",
     "tabs",
     "windows"
  ]
}
